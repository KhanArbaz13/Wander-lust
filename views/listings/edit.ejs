<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Listing</h3>
      <form
        method="post"
        action="/listing/<%= listing._id %>?_method=PUT"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            required="true"
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            required="true"
            type="text"
            name="listing[description]"
            class="form-control"
          >
<%= listing.description %>
      </textarea
          >
        </div>
        <div class="mb-3">
          <label for="image" class="form-lable">Image</label>
          <input
            required="true"
            type="text"
            name="listing[image]"
            class="form-control"
            value="<%= listing.image %>"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input
              required="true"
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
            />
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">Country</label>
            <input
              required="true"
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input
            required="true"
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
          />
        </div>
        <button class="btn btn-dark edt-btn mt-3 mb-3">Save Edit</button>
      </form>
    </div>
  </div>
</body>
